{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto Commit & Push",
      "type": "shell",
      "command": "git",
      "args": [
        "add",
        ".",
        "&&",
        "git",
        "commit",
        "-m",
        "ðŸ¤– Auto-commit: ${input:commitMessage}",
        "&&",
        "git",
        "push",
        "origin",
        "main"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Quick Deploy",
      "type": "shell",
      "command": "git",
      "args": [
        "add",
        ".",
        "&&",
        "git",
        "commit",
        "-m",
        "ðŸš€ Quick deploy: $(date '+%Y-%m-%d %H:%M:%S')",
        "&&",
        "git",
        "push",
        "origin",
        "main"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "description": "Commit message",
      "default": "Update files",
      "type": "promptString"
    }
  ]
}
